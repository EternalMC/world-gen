{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run_release",
            "type": "shell",
            "linux": {
                "command": "${workspaceRoot}/scripts/run_release.sh"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "run_debug",
            "type": "shell",
            "linux": {
                "command": "${workspaceRoot}/scripts/run_debug.sh"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
    ]
}