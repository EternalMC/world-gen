{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run_release",
            "type": "shell",
            "options": {
                "env": {
                    "RUST_LOG":"main=debug,application=debug,utility=debug,world_gen=debug,graphics=debug"
                }
            },
            "command": "cargo",
            "args": [
                "run",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },

        {
            "label": "run_debug",
            "type": "shell",
            "options": {
                "env": {
                    "RUST_LOG":"main=debug,application=debug,utility=debug,world_gen=debug,graphics=debug"
                }
            },
            "command": "cargo",
            "args": [
                "run",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
    ]
}